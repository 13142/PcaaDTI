<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <title>Online member list</title>
    <link rel="icon" href="favicon.ico" type="image/x-icon" />
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/accountManagement.css">
    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
</head>
<body>
    <div class="jumbotron">
        <div class="container">
            <h1><b>PCAA Manager</b></h1>
            <p>Management for thing</p>
        </div>
    </div>
    <div class="container">
        <div class="row">

            <div class="col-md-3">
                <ul class="list-group">
                    <li class="list-group-item active"><b>Account Management</b></li>
                    <li class="list-group-item"><a href="/main">Back</a></li>
                </ul>
            </div>
            <div class="col-md-9">
                <div class="tab-content">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Account Management</h3>
                        </div>
                        <ul class="list-group">
                            <li class="list-group-item btnRightCont">
                                <span>Current Username: <b>{{username}}</b></span>
                                <button class="btn btn-default endButton" id="changeUsrBtn" data-toggle="collapse" data-target="#usernameColl">Change username</button>
                                <div id="usernameColl" class="form-horizontal collapse nextLine">
                                    <hr class="collapseRule" />
                                    <div class="form-group">
                                        <label class="control-label col-sm-4" for="newUser">Enter new username:</label>
                                        <div class="col-sm-8">
                                            <input type="text" class="form-control" id="newUser" placeholder="Enter new username" maxlength="45" required>
                                        </div>
                                    </div>
                                    <div class="btnRightCont"><div></div><button class="btn btn-primary btnRight" id="usrChange">Change</button></div>
                                    <div class="alert alert-danger collapse" style="margin-top: 10px;" id="usrErr">Field can not be empty</div>
                                    <div class="alert alert-success collapse" style="margin-top: 10px;" id="usrSuc">Username changed</div>
                                </div>
                            </li>
                            <li class="list-group-item btnRightCont">
                                <span>Password: <b>***********</b></span><button class="btn btn-default endButton" data-toggle="collapse" data-target="#passwordColl">Change password</button>
                                <div id="passwordColl" class="form-horizontal collapse nextLine">
                                    <hr class="collapseRule" />
                                    <div class="form-group">
                                        <label class="control-label col-sm-4" for="oldPass">Enter your old password:</label>
                                        <div class="col-sm-8">
                                            <input type="password" class="form-control" id="oldPass" placeholder="Enter old password" maxlength="100" required>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-4" for="newPass">Enter your new password:</label>
                                        <div class="col-sm-8">
                                            <input type="password" class="form-control" id="newPass" placeholder="Enter new password" maxlength="100" required>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-4" for="newPassConf">Confirm your new password:</label>
                                        <div class="col-sm-8">
                                            <input type="password" class="form-control" id="newPassConf" placeholder="Confirm password" maxlength="100" required>
                                        </div>
                                    </div>
                                    <div class="btnRightCont"><div></div><button class="btn btn-primary btnRight" id="passChange">Change</button></div>
                                    <div class="alert alert-danger collapse" style="margin-top: 10px;" id="passErr"></div>
                                    <div class="alert alert-success collapse" style="margin-top: 10px;" id="passSuc">Password changed</div>
                                </div>
                            </li>
                            <li class="list-group-item btnRightCont">
                                <span>Permission level: <b>{{permission}}</b></span>
                            </li>
                            <!--<li class="list-group-item">Current Email: {{email}}<button class="btn btn-default pull-right" style="margin-top: -7px" id="changeEmailBtn">Change email</button></li>-->
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script>
        var errorType;
        {{#if errorType}}
        errorType = "{{errorType}}";
        {{/if}}

            if (errorType) {
                if (errorType === "passwordErr") {
                    $("#errorMsg").text("Error! Incorrect Password").show();
                }
                else if (errorType === "usernameErr") {
                    $("#errorMsg").text("Error! Incorrect Username").show();
                }else {
                    $("#errorMsg").text("Unknown Error!").show();
                }

            }
    </script>
    <script src="js/accountManagement.js"></script>
</body>

</html>